    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: TorizonCore Builder",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/torizoncore-builder.py",
            "cwd": "/workdir",
            "sudo": true,
            "args": [
                "unpack",
                "--image-directory",
                "test"
            ]
        },
        {
            "name": "Python: Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "0.0.0.0",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/builder/"
                }
            ]
        }
    ]
}
