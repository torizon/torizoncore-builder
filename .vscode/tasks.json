    "version": "2.0.0",
    "tasks": [
        {
            "label": "TorizonCore Integration tests",
            "type": "shell",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "command": "sudo",
            "args": [
                "-E",
                "/usr/local/bin/pytest",
                "--log-cli-level=INFO"
            ]
        }
    ]
}